{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MongoDbSettings": {
    "ConnectionString": "mongodb://mongo:27017",
    "DatabaseName": "IceAndFireDB"
  },
  "RedisSettings": {
    "Connection": "redis:6379",
    "DefaultCacheTime": 10,
    "ShortCacheTime": 5,
    "LongCacheTime": 60,
    "TestCacheTime": 1
  },
  "ApiSettings": {
    "CharactersApiUrl": "https://anapioficeandfire.com/api/characters",
    "HousesApiUrl": "https://anapioficeandfire.com/api/houses",
    "BooksApiUrl": "https://anapioficeandfire.com/api/books"
  },
  "Jwt": {
    "Key": "your_secret_key", // Secret key for signing JWT tokens (use a secure key)
    "Issuer": "your_issuer", // Token issuer (e.g., your app or API name)
    "Audience": "your_audience" // Valid audience for your tokens
  },
  "AllowedHosts": "*"
}
